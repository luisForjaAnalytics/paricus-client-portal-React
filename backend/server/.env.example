# ============================================
# CONFIGURACIÓN DE ENTORNO - PLANTILLA
# ============================================
# Copia este archivo a .env y configura tus valores
# ⚠️  El backend siempre trabaja en LOCAL (development)
# ============================================

NODE_ENV=development

# ============================================
# SERVIDOR
# ============================================
PORT=3001
CLIENT_URL=http://localhost:5173,http://localhost:5174

# ============================================
# BASE DE DATOS
# ============================================
DATABASE_URL=file:./prisma/dev.db

# ============================================
# JWT
# ============================================
JWT_SECRET=dev-jwt-secret-minimum-32-chars-long-for-local-development-12345678
JWT_EXPIRES_IN=24h

# ============================================
# AWS S3 (OPCIONAL)
# ============================================
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=paricus-client-portal-dev

# ============================================
# MSSQL (OPCIONAL)
# ============================================
MSSQL_SERVER=localhost
MSSQL_PORT=1433
MSSQL_USER=
MSSQL_PASSWORD=
MSSQL_DATABASE=Workforce_Management

# ============================================
# SEGURIDAD
# ============================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=10000
AUTH_RATE_LIMIT_MAX=1000

# ============================================
# EMAIL (OPCIONAL)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ============================================
# STORAGE MODE
# ============================================
STORAGE_MODE=local
